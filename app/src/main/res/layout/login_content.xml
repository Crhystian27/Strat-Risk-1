<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_login">

    <LinearLayout
        style="@style/CustomLinearLayout"
        android:layout_marginStart="@dimen/custom_spacing16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/custom_spacing16dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textHint"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/colorPrimaryLight"
            app:hintTextAppearance="@style/HintText"
            app:hintTextColor="@color/textHint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_username"
                style="@style/TextInputEditTextOutlinedBox"
                android:clickable="true"
                android:textCursorDrawable="@null"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:enabled="true"
                android:focusable="true"
                android:hint="@string/string_username"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/textWhite" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        style="@style/CustomLinearLayout"
        android:layout_marginStart="@dimen/custom_spacing16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/custom_spacing16dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textHint"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/colorPrimaryLight"
            app:hintTextAppearance="@style/HintText"
            app:hintTextColor="@color/textHint"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimaryLight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_password"
                style="@style/TextInputEditTextOutlinedBox"
                android:clickable="true"
                android:textCursorDrawable="@null"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:enabled="true"
                android:focusable="true"
                android:hint="@string/string_password"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="@color/textWhite" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</LinearLayout>