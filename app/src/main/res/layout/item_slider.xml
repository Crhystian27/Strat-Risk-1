<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/slideTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize" />

    <TextView
        android:id="@+id/slideSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slideTitle"
        android:layout_marginTop="?attr/actionBarSize" />



    <ImageView
        android:id="@+id/slideImg"
        android:layout_width="@dimen/custom_image_size128dp"
        android:layout_height="@dimen/custom_image_size128dp"
        android:layout_below="@+id/slideSubTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/slideMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slideImg"
        android:layout_marginStart="32dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginEnd="32dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/app_name"
        android:textColor="@color/textWhite"
        android:textSize="20sp" />

</RelativeLayout>