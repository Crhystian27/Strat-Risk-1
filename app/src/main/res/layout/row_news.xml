<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_state"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/custom_spacing2"
    android:layout_marginTop="@dimen/custom_spacing2"
    android:layout_marginEnd="@dimen/custom_spacing2"
    app:cardBackgroundColor="@color/colorAccent_800"
    app:cardCornerRadius="@dimen/custom_cornerRadius"
    app:cardElevation="@dimen/custom_spacing2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/custom_cornerRadius"
        app:cardElevation="@dimen/custom_spacing2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/custom_spacing2"
            android:layout_marginTop="@dimen/custom_spacing2"
            android:layout_marginEnd="@dimen/custom_spacing2"
            android:layout_marginBottom="@dimen/custom_spacing2"
            android:background="@drawable/bg_list_row"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/message_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/custom_spacing3"
                android:orientation="vertical">

                <TextView
                    android:text="titulo"
                    android:id="@+id/row_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/custom_spacing2"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:text="body"
                    android:id="@+id/row_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/custom_spacing2"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="@dimen/custom_spacing2"
                    android:background="@drawable/side_nav_bar" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_container"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/status_opportunity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/ic_background_opportunity"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/status_interesting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/ic_background_interesting"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/status_risk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/ic_background_risk"
                        android:visibility="gone" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/icon_container"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:orientation="vertical">

                    <!-- Change color background
                       android:tint="@color/colorPrimaryDark"
                       -->
                    <ImageView
                        android:id="@+id/pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_rss" />

                    <!--
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/row_ok_preview_detail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_gas"
                        app:civ_border_color="@color/colorWhite"
                        app:civ_border_width="4dp"
                        app:civ_circle_background_color="@color/colorWhite"
                        tools:ignore="ContentDescription" />

                    -->

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>