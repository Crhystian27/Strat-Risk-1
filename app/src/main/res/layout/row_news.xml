    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/custom_spacing4dp"
    android:layout_marginTop="@dimen/custom_spacing4dp"
    android:layout_marginEnd="@dimen/custom_spacing4dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/custom_cornerRadius15dp"
    app:cardElevation="@dimen/custom_spacing4dp">

