<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_height256dp"
    android:background="@drawable/nav_header_main_background"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.MaterialComponents.Dark">

    <ImageView
        android:id="@+id/nv_image"
        android:layout_width="@dimen/custom_image_size128dp"
        android:layout_height="@dimen/custom_image_size128dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_notifications_black_24dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/custom_spacing4dp"
        android:layout_marginBottom="@dimen/custom_spacing4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular_"
            android:gravity="center"
            android:text="@string/string_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/custom_text_size18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center"
            android:text="@string/string_email"
            android:textColor="@android:color/white"
            android:textSize="@dimen/custom_text_size16sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>